@model Examenes.Models.ViewModels.VerAlumnosViewModel

@{
    ViewData["Title"] = "Alumnos Inscriptos";
}

<div class="container mt-4">
    <h1 class="dashboard-title">Alumnos Inscriptos</h1>
    <h4 class="dashboard-subtitle text-muted">
        Curso: @Model.CursoNombre
    </h4>

    <a asp-controller="Profesor" asp-action="Index" class="btn btn-outline-secondary mt-2 mb-4">
        <i class="bi bi-arrow-left"></i> Volver a Mis Cursos
    </a>

    @if (!Model.Alumnos.Any())
    {
        <div class="alert alert-info" role="alert">
            Aún no hay alumnos inscriptos en este curso.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle cursos-table">
            <thead class="table-dark">
                <tr>
                    <th>Nombre del Alumno</th>
                    <th>Legajo</th>
                    <th class="text-center">Promedio Parciales</th>
                    <th class="text-center">Nota Final</th>
                    <th class="text-center">Situación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Alumnos)
                {
                    <tr>
                        <td>
                            <strong>@item.Alumno.Usuario.Nombre</strong>
                        </td>
                        <td>
                            @item.Alumno.Usuario.Legajo
                        </td>
                        <td class="text-center">
                            @(item.PromedioParciales == 0 ? "-" : (item.PromedioParciales?.ToString("F2") ?? "N/A"))
                        </td>
                        <td class="text-center">
                            @(item.NotaFinal == 0 ? "-" : (item.NotaFinal?.ToString("F2") ?? "N/A"))
                        </td>

                        <td class="text-center">
                            @{
                                var badgeClass = "bg-secondary";

                                if (item.EstadoSituacion == "PROMOCIONADO" || item.EstadoSituacion == "APROBADO")
                                    badgeClass = "bg-success";
                                else if (item.EstadoSituacion == "A FINAL")
                                    badgeClass = "bg-warning text-dark";
                                else if (item.EstadoSituacion == "RECURSA")
                                    badgeClass = "bg-danger";
                                else if (item.EstadoSituacion == "CURSANDO" || item.EstadoSituacion == "FINAL PENDIENTE")
                                    badgeClass = "bg-primary ";
                            }
                            <span class="badge @badgeClass">@item.EstadoSituacion</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>