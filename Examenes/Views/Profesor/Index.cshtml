@model IEnumerable<Examenes.Models.Curso>

@{
    ViewData["Title"] = "Panel de Profesor";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Mis Cursos</h1>
    </div>

    <p>Selecciona un curso para gestionar sus exámenes o ver los alumnos inscriptos.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Aún no tienes cursos asignados.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre del Curso</th>
                    <th>Materia</th>
                    <th>Estado</th>
                    <th class="text-center">Inscriptos</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model)
                {
                    <tr>
                        <td>
                            <strong>@curso.Nombre</strong>
                        </td>
                        <td>
                            @curso.Materia.Nombre
                        </td>
                        <td class="text-center">
                            @if (curso.Finalizado)
                            {
                                <spam class="badge bg-secondary">Cerrado</spam>
                            }
                            else
                            {
                                <spam class="badge bg-success">Activo</spam>
                            }
                        </td>
                        <td class="text-center">
                            @curso.Inscripciones.Count()
                        </td>
                        <td class="text-end">
                            <a asp-controller="Examen" asp-action="ListadoPorCursoProfesor" asp-route-cursoId="@curso.Id" 
                                class="btn btn-primary btn-sm">
                                Exámenes
                            </a>
                            <a asp-controller="Profesor" asp-action="VerAlumnos" asp-route-cursoId="@curso.Id"
                                class="btn btn-secondary btn-sm">
                                Ver Alumnos
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>