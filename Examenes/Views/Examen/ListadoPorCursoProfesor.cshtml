@* 1. Definimos que el Modelo es nuestro ViewModel *@
@model Examenes.Models.ViewModels.ExamenCursoViewModel

@{
    ViewData["Title"] = "Listado de Exámenes";
}

<div class="container mt-4">

    <h1 class="dashboard-title">Listado de Exámenes</h1>
    <h4 class="dashboard-subtitle text-muted">
        @Model.NombreCurso (@Model.NombreMateria)
    </h4>

    <p class="mt-3">
        <a asp-action="Crear" asp-route-cursoId="@Model.CursoId" 
       class="btn btn-success @(Model.Finalizado ? "disabled" : "")">
            <i class="bi bi-plus-circle"></i> Nuevo Examen
        </a>
        <a asp-controller="Profesor" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Mis Cursos
        </a>
    </p>

    @if (!Model.Examenes.Any())
    {
        <div class="alert alert-info mt-4" role="alert">
            Aún no hay exámenes creados para este curso.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle cursos-table mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Título</th>
                    <th>Tipo</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Fin</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var examen in Model.Examenes)
                {

                    bool examenIniciado = examen.Inicio <= DateTime.Now;
                    string deshabilitado = examenIniciado ? "disabled" : "";

                    <tr>
                        <td><strong>@examen.Titulo</strong></td>
                        <td>
                            @* Mostramos el Enum (PARCIAL o FINAL) *@
                            @examen.Tipo
                        </td>
                        <td>
                            @* Formateamos la fecha *@
                            @examen.Inicio.ToString("dd/MM/yyyy HH:mm") hs
                        </td>
                        <td>
                            @examen.Fin.ToString("dd/MM/yyyy HH:mm") hs
                        </td>
                        <td class="text-end">
                            <a asp-controller="Respuestas" asp-action="Index" asp-route-examenId="@examen.Id"
                                class="btn btn-primary btn-sm @(examenIniciado ? "" : "disabled")">
                                Respuestas
                            </a>

                            <a asp-action="Modificar" asp-route-id="@examen.Id" class="btn btn-warning btn-sm @deshabilitado">
                                Editar
                            </a>

                            <a asp-action="Eliminar" asp-route-id="@examen.Id" class="btn btn-danger btn-sm @deshabilitado">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>